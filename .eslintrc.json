{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "max-len": [
      "error",
      {
        "code": 95,
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "semi": "error",
    "@typescript-eslint/explicit-function-return-type": [
      "error",
      {
        "allowExpressions": true
      }
    ]
  },
  // "overrides": [
  //   {
  //     "files": ["types/*.ts"],
  //     "rules": {
  //       "max-len": [
  //         "error", 
  //         {
  //           "code": 120
  //         }
  //       ]
  //     }
  //   }
  // ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
